#include "ft_printf.h"
#include <stdio.h>

int	main(void)
{
	char	str[] = "Hello my friend !";

	// check if printf and my ft_printf are the same, do normal tests and tricky tests
	printf("\n%d\n", printf("real: %s", str));
	printf("\n%d\n\n", ft_printf("mine: %s", str));

	printf("\n%d\n", printf("real: %c", 'c'));
	printf("\n%d\n\n", ft_printf("mine: %c", 'c'));

	printf("\n%d\n", printf("real: %p", str));
	printf("\n%d\n\n", ft_printf("mine: %p", str));

	printf("\n%d\n", printf("real: %d", 42));
	printf("\n%d\n\n", ft_printf("mine: %d", 42));

	printf("\n%d\n", printf("real: %i", 42));
	printf("\n%d\n\n", ft_printf("mine: %i", 42));

	printf("\n%d\n", printf("real: %x", 42));
	printf("\n%d\n\n", ft_printf("mine: %x", 42));

	printf("\n%d\n", printf("real: %X", 42));
	printf("\n%d\n\n", ft_printf("mine: %X", 42));

	printf("\n%d\n", printf("real: %%"));
	printf("\n%d\n\n", ft_printf("mine: %%"));

	printf("\n%d\n", printf("real: %c %s %p %d %i %x %X %%", 'c', str, str, 42, 42, 42, 42));
	printf("\n%d\n\n", ft_printf("mine: %c %s %p %d %i %x %X %%", 'c', str, str, 42, 42, 42, 42));

	// do a test for double
	printf("\n%d\n", printf("real: %f", 42.42));
	printf("\n%d\n\n", ft_printf("mine: %f", 42.42));

	return (0);
}
